@model Contacts.Models.ProfessionalEstablishment

@{
    ViewData["Title"] = "Delete";
}

<h1>@ViewData["Title"]</h1>

<h3 style="color: red">Tem certeza que deseja deletar?</h3>
<div>
    <h4>Profissional -> Estabelecimento</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Professional)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Professional.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Establishment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Establishment.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProfissionalEstablishmenId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-dark">Voltar</a>
    </form>
</div>
