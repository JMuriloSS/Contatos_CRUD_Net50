@model IEnumerable<Contacts.Models.ProfessionalEstablishment>

@{
    ViewData["Title"] = "Vinculo Profissional e Estabelecimentos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo Cadastro</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-primary text-light">
            <th>
                @Html.DisplayNameFor(model => model.Professional)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Establishment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Professional.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Establishment.Name)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-success btn-sm" asp-route-id="@item.ProfissionalEstablishmenId">Editar</a>
                    <a asp-action="Details" class="btn btn-info btn-sm" asp-route-id="@item.ProfissionalEstablishmenId">Detalhes</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.ProfissionalEstablishmenId">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
